:Idle:
	Call(GroundedNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_STAND)
	endif

:Crouch:
	Flag(Crouching)
	Call(GroundedNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_CROUCH)
	endif

:WalkF:
	Call(GroundedNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_WALKF)
	endif
	Move(WalkFSpeed, 0)

:WalkB:
	Call(GroundedNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_WALKB)
	endif
	Move(WalkBSpeed, 0)



:Jumpsquat:
	Call(Common)
	# TODO Weird airborne state, check if correct, and if Airborne flag is correct
	Call(StandardHurtbox)
	Flag(Airborne)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_JUMPSQUAT)
	endif
	F1:
		Flag(ApplyFacing)
	endif
	
	FJumpsquatFrames:
		IForward:
			Transition(JumpF)
		endif
		IBack:
			Transition(JumpB)
		endif
		INeutralH:
			Transition(JumpN)
		endif
	endif
	
:Landing:
	Call(GroundedState)
	Flag(CanBlock)
	Call(StandardHurtbox)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_LANDING)
	endif
	F1:
		Set(EffectiveLandingLag, DefaultLandingLag)
	endif
	
	FEffectiveLandingLag:
		Call(GroundedNeutralStateTransitions)
	endif
	

:JumpN:
	Call(AirborneNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_JUMPN)
	endif
	F1:
		AddMomentum(0, JumpNForce)
	endif
:JumpF:
	Call(AirborneNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_JUMPF)
	endif
	F1:
		AddMomentum(JumpFForce, JumpNForce)
	endif
:JumpB:
	Call(AirborneNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_JUMPB)
	endif
	F1:
		AddMomentum(JumpBForce, JumpNForce)
	endif


:AirIdle:
	Call(AirborneNeutralState)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_AIRIDLE)
	endif






