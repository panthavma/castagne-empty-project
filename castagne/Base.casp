:KnockdownCommon:
	Call(Common)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_KNOCKDOWN)
	endif
	Colbox(-5000, 5000, 0, 2000)
	CapMomentum(2000, 0)
	BreakMomentum(500,0)

:Knockdown:
	Call(KnockdownCommon)
	F13+:
		ITech:
			Call(GroundTech)
		endif
		F43:
			Call(GroundTech)
		endif
	endif

:HardKnockdown:
	Call(KnockdownCommon)
	F50:
		Transition(NeutralTech, 5000)
	endif











