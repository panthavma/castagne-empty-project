:Init:
	CopyFighterVariables()
	CreateModel(MODEL_PATH, ANIMPLAYER_PATH)
	Transition(Idle)



# Common -----------------------------------------------------------------------
#    ______                                    
#   / ____/___  ____ ___  ____ ___  ____  ____ 
#  / /   / __ \/ __ `__ \/ __ `__ \/ __ \/ __ \
