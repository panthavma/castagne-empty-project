:OnHitstunLanding:
	LAFHardKnockdown:
		Transition(HardKnockdown, 6000)
	else
		LAFKnockdown:
			Transition(Knockdown, 6000)
		else
			INeutralH:
				Transition(SoftTech, 5500)
			endif
			Call(GroundTech)
		endif
	endif


:HitstunCommon:
	Call(Common)
	Flag(Hitstun)
	Call(StandardHurtbox)
	F1:
		SetMomentumAbsolute(AttackMomentumH, AttackMomentumV)
	endif

:HitstunStand:
	Call(HitstunCommon)
	Call(StandardHurtbox)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_HITSTUN_STAND)
	endif
	BreakMomentum(100, 0)
	FHitstunDuration:
		Transition(Idle)
	endif
	LPFAirborne:
		Transition(HitstunAir)
	endif

:HitstunCrouch:
	Flag(Crouching)
	Call(HitstunCommon)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_HITSTUN_CROUCH)
	endif
	BreakMomentum(100, 0)
	FHitstunDuration:
		Transition(Crouch)
	endif
	LPFAirborne:
		Transition(HitstunAir)
	endif

:HitstunAir:
	Call(HitstunCommon)
	AddMomentum(0, -40)
	VUSE_STANDARD_ANIMS:
		Anim(ANIM_HITSTUN_AIR)
	endif
	FHitstunDuration:
		Transition(AirTech)
	endif
	LPFGrounded:
		Call(OnHitstunLanding)
	endif








